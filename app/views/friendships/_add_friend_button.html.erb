<% if @is_own_profile %>
  <%= link_to edit_user_registration_path, :class => 'btn' do %>
    <i class="icon-cog icon-plus"></i> Modifier votre profil
  <% end %>
  <%= link_to subscriptions_path, :class => 'btn' do %>
    <i class="icon-time"></i> Mes inscriptions
  <% end %>
<% else %>
  <% if @are_friends %>
      <strong>Vous êtes amis.</strong>
  <% elsif current_user.pending_friends.include?(@user) %>
    <strong>Demande en attente.</strong>
  <% elsif current_user.requested_friendships.include?(@user) %>
    <strong>Vous a demandé en ami.</strong>
  <% else %>
    <%= link_to user_friendships_path(@user), { method: :post, :class => 'btn' } do %>
      <i class="icon-envelope icon-plus"></i> Ajouter en ami
    <% end %>
  <% end %>
<% end %>
