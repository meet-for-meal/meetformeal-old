<h1>Announcement</h1>

<div class="row">
  <div class="col-md-6">
    <p>User: <%= link_to @announcement.user.name, user_path(@announcement.user) %></p>
    <p>Longitude: <%= @announcement.longitude %></p>
    <p>Latitude: <%= @announcement.latitude %></p>
  </div>
  <div class="col-md-6">
    <div id="map-canvas"></div>
  </div>
</div>

<script id="js-user-location" data-location='[<%= @announcement.latitude %>, <%= @announcement.longitude %>]'></script>
